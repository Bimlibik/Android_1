<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchParent"
    android:orientation="vertical"
    android:background="@color/color_background"
    tools:context=".fragments.StartMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/fragment_start_menu_image_view_main"
            style="@style/StartFragmentImageMainStyle"
            android:src="@drawable/img_start_activity_book" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/color_background">

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_info"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_information" />

            <Button
                android:id="@+id/fragment_start_menu_button_info"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:text="@string/about_app" />
        </LinearLayout>

        <View
            style="@style/StartFragmentDividerStyle"/>

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_theory"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_theory" />

            <Button
                android:id="@+id/fragment_start_menu_button_theory"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:fontFamily="@assets/fonts/rubikLight"
                android:text="@string/theory" />
        </LinearLayout>

        <View
            style="@style/StartFragmentDividerStyle"/>

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_cheat"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_cheat" />

            <Button
                android:id="@+id/fragment_start_menu_button_cheat"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:text="@string/cheat" />
        </LinearLayout>

        <View
            style="@style/StartFragmentDividerStyle"/>

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_notes"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_notes" />

            <Button
                android:id="@+id/fragment_start_menu_button_notes"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:text="@string/notes" />
        </LinearLayout>

        <View
            style="@style/StartFragmentDividerStyle"/>

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_statistics"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_statistics" />

            <Button
                android:id="@+id/fragment_start_menu_button_statistics"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:text="@string/statistics" />
        </LinearLayout>

        <View
            style="@style/StartFragmentDividerStyle"/>

        <LinearLayout
            style="@style/StartFragmentHorizontalLinearLayoutStyle">

            <ImageView
                android:id="@+id/fragment_start_menu_image_view_exit"
                style="@style/StartFragmentImageButtonStyle"
                android:src="@drawable/ic_start_activity_exit" />

            <Button
                android:id="@+id/fragment_start_menu_button_exit"
                style="@style/BoldFontStyle.StartFragmentButtonStyle"
                android:text="@string/exit" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>