<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foxy.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <!-- Главный экран -->
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Экран, в котором будет список уроков -->
        <activity
            android:name=".activities.LessonListActivity"
            android:label="@string/lesson_list_name"></activity>

        <!-- Заметки -->
        <activity
            android:name=".activities.NotesActivity"
            android:label="@string/notes"></activity>
        <activity android:name=".activities.LessonDescriptionActivity"></activity>
    </application>

</manifest>