<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foxy.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        >

        <!--Главный экран-->
        <activity android:name=".Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Экран, в котором будет список уроков-->
        <activity android:name=".Activities.LessonListActivity"
            android:label="@string/lesson_list_name">
        </activity>

        <!--Заметки-->
        <activity android:name=".Activities.NotesActivity"
            android:label="@string/notes">
        </activity>

    </application>

</manifest>